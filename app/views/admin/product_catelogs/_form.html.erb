      </div>
      <div class="field">
        <%= form.label t('news.description') %>
        <%= form.cktext_area :description%>
      </div>
      <div class="field">
        <%= form.label t('product_catelogs.file_path') %><br>
        <%= form.file_field :file_path %>
      </div>
      <div class="field">
        <%= form.label t('product_catelogs.pictures_path') %><br>
        <%= form.file_field :pictures %>
      </div>
    </div>
  <%end%>
</div>
