<%= stylesheet_link_tag 'admin/product_form', media: 'all' %>
<div id='form_container'>
  <%= form_for @admin_product_catelog, url: @redirect_path do |form| %>
    <% if @admin_product_catelog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@admin_product_catelog.errors.count, "error") %> prohibited this @admin_product_catelog from being saved:</h2>
        <ul>
        <% @admin_product_catelog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div><!--End Error Explanation-->
    <% end %>
    <div id= 'form_container'>
      <div class="actions">
        <%= form.submit class: 'btn info'%>
      </div><!--End Actions-->
      <div class="field">
        <%= form.label t('news.title') %>
