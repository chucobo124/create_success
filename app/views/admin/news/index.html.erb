<h3><%= t('navigation.news')%></h3>

<%= link_to t('news.create'), new_admin_news_path , class: 'btn info'%>

<table>
  <tr>
    <th><%= t('news.title')%></th>
    <th><%= t('news.description')%></th>
    <th><%= t('aciton.label')%></th>
  </tr>
  <% @admin_news.each do |news|%>
    <tr>
      <th><%= news.title%></th>
      <th><%= news.description.html_safe%></th>
      <th>
        <%= link_to t('action.update'), admin_news_path(news.id), class: 'btn success'%>
        <%= link_to t('action.delete'), admin_news_path(news.id), method: 'delete', class: 'btn danger'%>
      </th>
    </tr>
  <%end%>
</table>
